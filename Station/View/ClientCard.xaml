<Page x:Class="Station.View.ClientCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Station.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="200"
      Title="ClientCard" Background="White">

    <Grid>
        <StackPanel>
            <Rectangle Height="15"/>
            <TextBlock Name="ClientName" Margin="15" HorizontalAlignment="Center"/>
            <Button Content="Мой авто" Margin="15" Click="AutoBtn_Click" Style="{StaticResource MainBtn}"/>
            <Button Content="Мои записи" Margin="15" Click="ZapicBtn_Click" Style="{StaticResource MainBtn}"/>
        </StackPanel>
    </Grid>
</Page>
